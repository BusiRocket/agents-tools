{
  "name": "busirocket-agents-tools",
  "version": "1.0.0",
  "private": true,
  "description": "Agent workflow engine + rules/skills orchestrator for high-quality code across IDEs",
  "scripts": {
    "build": "pnpm run format && pnpm run lint:fix && pnpm run rules:compile && pnpm run skills:validate",
    "check:all": "pnpm run format:check && pnpm run lint && pnpm run rules:check && pnpm run skills:validate",
    "check:ci": "pnpm run check:all",
    "check": "pnpm run check:all",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "rules:check": "node scripts/compile-rules.mjs --check",
    "rules:compile": "node scripts/compile-rules.mjs",
    "rules:link:all": "pnpm run rules:link:codex && pnpm run rules:link:claude && pnpm run rules:link:antigravity && pnpm run rules:link:windsurf",
    "rules:link:antigravity": "node scripts/link-antigravity-global.mjs",
    "rules:link:claude": "node scripts/link-claude-global.mjs",
    "rules:link:codex": "node scripts/link-codex-global.mjs",
    "rules:link:windsurf": "node scripts/link-windsurf-global.mjs",
    "skills:validate": "node scripts/validate-skills.mjs",
    "skills:llms": "node scripts/generate-llms-txt.mjs",
    "skills:prompt": "node scripts/to-prompt.mjs",
    "skills:prompt:file": "node scripts/to-prompt.mjs > available_skills.xml",
    "skills:version:check": "node scripts/check-version.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.30.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/BusiRocket/busirocket-agents-tools.git"
  },
  "license": "MIT"
}
